{
  "compilerOptions": {
    "strict": true,
    "checkJs": true,
    "allowJs": true,
    "module": "es2020",
    "target": "es2020",
    "rootDir": "./",
    "outDir": "out",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
